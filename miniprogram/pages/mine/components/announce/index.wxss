.announce-view {
  padding: 50rpx;
  width: 580rpx;
  box-sizing: border-box;
}

.announce-view>.content-title {
  position: relative;
  color: #90939B;
  padding: 0 0 60rpx;
  text-align: center;
  font-size: 36rpx;
}

.announce-view>.content-title::after {
  content: "";
  position: absolute;
  width: 100%;
  height: 1rpx;
  background: #EEEEEE;
  left: 0;
  bottom: 0;
}

.announce-view>.content-btns {
  display: flex;
  justify-content: space-around;
  padding-top: 32rpx;
  padding-bottom: 44rpx;
}

.announce-view>.content-btns .btn {
  padding: 0;
  width: 144rpx;
  height: 58rpx;
  /* background: linear-gradient(133deg, #A5D5FF 0%, #7D93FF 100%, #7D93FF 100%); */
  border-radius: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  box-sizing: border-box;
}

.announce-view>.content-btns .btn:nth-child(1) {
  border: 2px solid #B2D8FF; 
  color: #B2D8FF;
}

.announce-view>.content-btns .btn:nth-child(2) {
  
  background: linear-gradient(to right, #A5D5FF, #7D93FF);
  color: #fff;
}

.announce-view>.tips {
  position: absolute;
  bottom: 31rpx;
  right: 94rpx;
  font-size: 24rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  color: #90939B;
}

.announce-view>.tips>.tip-icon {
  width: 20rpx;
  height: 20rpx;
  margin-right: 10rpx;
}