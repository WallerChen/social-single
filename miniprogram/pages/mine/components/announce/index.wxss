.announce-view>.content-title {
  position: relative;
  color: #90939B;
  padding: 0 0 60rpx;
  text-align: center;
}

.announce-view>.content-title::after {
  content: "";
  position: absolute;
  width: 100%;
  height: 1rpx;
  background: #EEEEEE;
  left: 0;
  bottom: 0;
}

.announce-view>.content-btns {
  display: flex;
  justify-content: space-around;
  padding: 32rpx 0;
}

.announce-view>.content-btns .btn {
  padding: 8rpx 40rpx;
  border-radius: 40rpx;
  font-size: 24rpx;
}

.announce-view>.content-btns .btn:nth-child(1) {
  border: 1px solid #B2D8FF;
  color: #B2D8FF;
}

.announce-view>.content-btns .btn:nth-child(2) {
  padding: 10rpx 42rpx;
  background: linear-gradient(to right, #A5D5FF, #7D93FF);
  color: #fff;
}

.announce-view>.tips {
  font-size: 24rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  color: #90939B;
}

.announce-view>.tips>.tip-icon {
  width: 20rpx;
  height: 20rpx;
  margin-right: 10rpx;
}