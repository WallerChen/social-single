.prevAnimation {
    animation: prev .6s ease-in;
  }
  .nextAnimation {
    animation: next .6s ease-in;
  }
  @keyframes prev {
    0% {
      transform: rotateY(-180deg);
    }
    100% {
      transform: rotateY(0deg);
    }
  }
  @keyframes next {
    0% {
      transform: rotateY(0);
    }
    100% {
      transform: rotateY(-180deg);
    }
  }

  
