.classmate-info-view {
  width: 657rpx;
  height: 862rpx;
  position: relative;
  margin: 0 auto;
  padding-top: 70rpx;
  padding-left: 120rpx;
  box-sizing: border-box;
  transform-style: preserve-3d;
  background-image: url(https://single-design.bj.bcebos.com/yutong/source/images/info/page-bg.png);
  background-size: 657rpx 862rpx;
}

.classmate-info-view>.title {
  width: calc(100% - 255rpx);
  font-weight: bold;
  font-size: 40rpx;
  margin-bottom: 24rpx;
}

.classmate-info-view>.intro {
  width: calc(100% - 255rpx);
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.classmate-info-view>.intro>.name {
  color: #959490;
}

.classmate-info-view>.intro>.gender-icon {
  width: 64rpx;
  height: 64rpx;
}

.classmate-info-view .img-container {
  position: absolute;
  right: 60rpx;
  top: 60rpx;
  width: 194rpx;
  height: 194rpx;
  border-radius: 40rpx;
  border: 4rpx solid #B2D8FF;
  box-sizing: border-box;
}
.classmate-info-view .avatar {
  border-radius: 40rpx;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  border: 4rpx solid white;
}

.classmate-info-view>.self-intro {
  width: calc(100% - 70rpx);
  height: 350rpx;
  word-break: break-all;
  overflow: hidden;
}

.classmate-info-view>.footer {
  display: flex;
  justify-content: flex-end;
  position: absolute;
  right: 70rpx;
  bottom: 130rpx;
}

.classmate-info-view>.footer>.footer-icon {
  width: 42rpx;
  height: 42rpx;
  margin-left: 20rpx;
}