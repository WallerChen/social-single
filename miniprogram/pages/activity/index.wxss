.filter {
  width: 670rpx;
  height: 82rpx;
  background: #FFFFFF;
  box-shadow: 0rpx 2rpx 10rpx 0rpx rgba(0, 0, 0, 0.06);
  border-radius: 74rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin-left: auto;
  margin-right: auto;
  z-index: 100;
}
.filter .dropdown {
  font-size: 30rpx;
  color: #90939B;
  line-height: 42rpx;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}
.filter .dropdown .dropdown-list {
  position: absolute;
  top: 82rpx;
  background-color: white;
  box-shadow: 0rpx 2rpx 10rpx 0rpx rgba(0, 0, 0, 0.08);
  width: 250rpx;
  border-radius: 0 0 30rpx 30rpx;
  transition: all 0.05s ease-in;
  transform-origin: top;
}
.filter .dropdown .dropdown-list .item {
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.filter .dropdown .dropdown-list .item:not(:last-child) {
  border-bottom: 1px solid #cacaca;
}
