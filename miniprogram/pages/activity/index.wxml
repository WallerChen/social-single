<view>
    <image class="page-header" src="https://single-design.bj.bcebos.com/newActivity/acitity-header.png"></image>
    <view class="page-content">
         <view class="page-select">
            <view>
                类别:
            </view>
            <view>
                价格:
            </view>
         </view>
         <view class="page-activity">
            <block wx:for="{{activityList}}" wx:for-index="index" wx:for-item="item" wx:key="index">
                <view class="card">
                    <image class="header" src="{{item.images}}"/>
                    <view class="content">
                        <view class="header">
                            <view class="title">
                                {{item.title}}
                            </view>
                            <view class="price">
                                ¥{{item.price}}
                            </view>
                        </view>
                        <view class="desc">
                             {{item.content}}
                        </view>
                        <view class="bottom">
                            <view class="date">
                                 {{item.date}}
                            </view>
                            <view class="author">
                                 {{item.organizer}}
                            </view>
                            <image class="button" src="https://single-design.bj.bcebos.com/newActivity/baoming.png">
                            </image>
                        </view>
                    </view>
                </view>
            </block>
         </view>
    </view>
</view>