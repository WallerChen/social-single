<view class="new-user-page">
   <user-card userInfo="{{userInfo}}"/>
   <view class="into-card">
      <view class="card-head">
         <view>我的介绍</view>
         <view>
            <image src="https://single-design.bj.bcebos.com/newHome/edit.png"></image>
         </view>
      </view>
      <view class="card-content">
         <textarea maxlength="{{200}}" />
      </view>
      <view class="buttons">
         <view class="b-item">保存</view>
         <view class="b-item">发布</view>
      </view>
      <view class="upload-image">
         <view class="add-image"></view>
      </view>
      <view class="card-footer">
         <view class="line">
            <view class="line-text">单身同学录</view>
         </view>
      </view>
   </view>
   <view class="tab">
      <view class="tab-item">
         <image src="https://single-design.bj.bcebos.com/newHome/tdjs.png"></image>
         <view>团队介绍</view>
         <view class="line" />
      </view>
      <view class="tab-item">
         <image src="https://single-design.bj.bcebos.com/newHome/sqgf.png"></image>
         <view>社区规范</view>
         <view class="line" />
      </view>
      <view class="tab-item">
         <image src="https://single-design.bj.bcebos.com/newHome/jytc.png"></image>
         <view>建议提出</view>
      </view>
   </view>
   <modal showModal="{{showModal}}">
      <view class="modal-content">
         <view class="content-title">确认发布，离脱单更进一步！</view>
         <view class="content-btns">
            <view class="btn" bindtap="cancel">取消</view>
            <view class="btn">确认</view>
         </view>
         <view class="tips">
            <image src="https://single-student.bj.bcebos.com/vip.png"></image>
            <view>同步展示至公开班</view>
         </view>
      </view>
   </modal>
</view>