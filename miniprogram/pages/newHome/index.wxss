page {
    /* background-image: linear-gradient(#F1F3F8, #F9FAFF); */
    background-color: #F1F3F8;
}

.header-wrap {
    width: 670rpx;
    height: 148rpx;
    margin: 0 auto 28rpx;
    display: flex;
    align-items: center;
    justify-content: space-evenly;
    background-color: #E3E9F0;
    border-radius: 74rpx;
}

.header-wrap .subBlock-select {
    width: 306rpx;
    height: 100rpx;
    background-color: #FFFFFF;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 60rpx;
}

.header-wrap .subBlock-unselect {
    width: 306rpx;
    height: 100rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 60rpx;
    color: #90939B;
}

.header-wrap .title {
    font-size: 36rpx;
}

.class-nav {
    /* margin: 38rpx 0 0 40rpx; */
}

.class-nav .class-list {
    height: 104rpx;
    overflow: auto;
    white-space: nowrap;
}

.class-nav .item {
    margin-left: 24rpx;
    display: inline-block;
    position: relative;
    width: 180rpx;
    height: 76rpx;
    line-height: 76rpx;
    border-radius: 20rpx;
    text-align: center;
    /* background-color: #E3E9F0; */
    background: url(https://single-design.bj.bcebos.com/newHome/tab-bg.png) center/160rpx 86rpx no-repeat;
    overflow: hidden;
}



.class-nav .item .vip {
    position: absolute;
    width: 40rpx;
    height: 35rpx;
    right: -20rpx;
    top: -17rpx;
 }

.class-nav .item text {
    /* margin-left: 18rpx; */
    font-size: 28rpx;
    color: #666666;
}

.home-content {
    position: relative;
    margin: 0 auto;
    width: 657rpx;
    height: 862rpx;
    background-image: url(https://single-design.bj.bcebos.com/newHome/home-back.png);
    background-size: 657rpx 862rpx;
    padding: 70rpx 130rpx;
    box-sizing: border-box;
}
.home-content image{
    width: 42rpx;
    height: 42rpx;
}
.home-content .title{
    font-weight: 600;
    font-size: 40rpx;
}
.home-content .intro{
    display: flex;
    align-items: center;
    margin:24rpx 0;
}
.home-content .intro image{
    width: 64rpx;
    height: 64rpx;
}
.home-content .intro .name{
    color: #959490;
}
.self-intro{
    width: 422rpx;
    margin-top:24rpx;
}
.footer{
    display: flex;
    justify-content: flex-end;
    position: absolute;
    right: 76rpx;
    bottom:134rpx;
}
.footer image{
    margin-left:20rpx;
}

.modal{
    width: 600rpx;
}
.modal-header{
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 36rpx;
    margin-bottom: 28rpx;
}
.modal-header image{
    width: 36rpx;
    height: 36rpx;
}
.content-img image{
    width: 200rpx;
    height: 200rpx;
}
.modal-content{
    color: #666666;
}

