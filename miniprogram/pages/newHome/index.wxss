@import './components/student.wxss';
page {
    /* background-image: linear-gradient(#F1F3F8, #F9FAFF); */
    background-color: #F1F3F8;
}

.element {
    position: absolute;
    width: 254rpx;
    height: 112rpx;
    left: 8rpx;
    top: 200rpx;
    z-index: 1;
}

.element1 {
    position: absolute;
    width: 186rpx;
    height: 178rpx;
    right: 11rpx;
    top: 13rpx;
}

.header-wrap {
    width: 670rpx;
    height: 148rpx;
    margin-left: 40rpx;
    display: flex;
    align-items: center;
    justify-content: space-evenly;
    background-color: #E3E9F0;
    border-radius: 74rpx;
}

.header-wrap .subBlock-select {
    width: 306rpx;
    height: 100rpx;
    background-color: #FFFFFF;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 60rpx;
}

.header-wrap .subBlock-unselect {
    width: 306rpx;
    height: 100rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 60rpx;
    color: #90939B;
}

.header-wrap .title {
    font-size: 36rpx;
}

.class-nav {
    margin: 38rpx 0 0 40rpx;
}

.class-nav .class-list {
    display: flex;
}

.class-nav .item {
    margin-left: 10rpx;
    display: inline-block;
    position: relative;
    width: 144rpx;
    height: 64rpx;
    border-radius: 20rpx;
    background-color: #E3E9F0;
    
}

.class-nav .item .vip {
    position: absolute;
    width: 40rpx;
    height: 35rpx;
    left: -4rpx;
    top: -5rpx;
 }

.class-nav .item text {
    margin-left: 18rpx;
    font-size: 28rpx;
    color: #666666;
}

.home-content {
    position: relative;
    margin: 70rpx 0 0 19rpx;
    width: 657rpx;
    height: 862rpx;
    background-image: url(https://single-design.bj.bcebos.com/newHome/home-back.png);
    background-size: 657rpx 862rpx;
}

.home-content  .home-content-info {
    position: absolute;
    left: 107rpx;
    top: 64rpx;
    display: flex;
    flex-direction: column;
}

.home-content  .home-content-info .header {
   display: flex;
}

.home-content  .home-content-info .content {
    display: flex;
    width: 500rpx;
    height: 500rpx;
    text-overflow: ellipsis;
 }
 

.home-content  .home-content-info .header .left-wrap {
    display: flex;
    flex-direction: column;
}

.home-content  .home-content-info .header .right-wrap .avatar {
    margin-left: 100rpx;
    width: 194rpx;
    height: 194rpx;
    border-radius: 40rpx;
    border:1rpx solid #B2D8FF;
}

.home-content  .home-content-info .header .left-wrap .title {
    font-size: 40rpx;
    color: #333333;
}

.home-content  .home-content-info .content {
   margin-top: 40rpx;
   color: #666666;
   font-size: 28rpx;
   height: 300rpx;
}


.home-content  .home-content-info .header .left-wrap .user {
    margin-top: 40rpx;
    display: flex;
}

.home-content  .home-content-info .header .left-wrap .user .name {
    font-size: 28rpx;
    color: #959490;
}

.home-content  .home-content-info .header .left-wrap .user .sex {
    width: 70rpx;
    height: 70rpx;
}

.hide-content-back {
    position: absolute;
    width: 528rpx;
    height: 688rpx;
    left: 180rpx;
    top: 105rpx;
    background-image: url(https://single-design.bj.bcebos.com/newHome/hide-back.png);
    background-size: 528rpx 688rpx;
    z-index: -1;
}

