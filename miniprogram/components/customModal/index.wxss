.dialogImage {
    position: fixed;
    top: 0;
    z-index: 100;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0.3);
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.dialogImage .dialog-layout {
    position: fixed;
    top: 400rpx;
    z-index: 100;
    width: 500rpx;
    height: 500rpx;
    background: rgba(255,255,255,255.3);
    border-radius: 20rpx;
}


.dialogImage .dialog-layout .header {
    display: flex;
    justify-content: center;
    margin-top: 20rpx;
}

.dialogImage .dialog-layout .content {
    display: flex;
    justify-content: center;
}