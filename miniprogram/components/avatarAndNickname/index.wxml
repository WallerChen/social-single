<view wx:if="{{visible}}" class="dialog">
   <view data-weui-theme="{{theme}}">
     <button class="avatar-wrapper" open-type="chooseAvatar" bind:chooseavatar="onChooseAvatar">
    <image class="avatar" src="{{avatarUrl}}"></image>
  </button> 
  <mp-form >
    <mp-cells>
      <mp-cell title="昵称">
        <input type="nickname" class="weui-input" bindinput="onInput" placeholder="建议使用微信昵称～"/>
      </mp-cell>
    </mp-cells>
  </mp-form>
  <button style="margin-top: 50rpx" type="primary" bind:tap="onSaveAvatarNickname">确认</button>
</view>
</view>
